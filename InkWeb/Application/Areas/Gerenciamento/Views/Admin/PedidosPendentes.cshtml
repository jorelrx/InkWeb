@model IQueryable<Models.Gerenciamento.MUsuario>
@{ 
    ViewBag.Title = "Pedidos Pendentes";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<main>
    <h3>Gerenciar Pedidos</h3>
    <nav>
        <ul>
            @{ string[] userInfo = User.Identity.Name.Split(';'); }
            <li><a href="@Url.Action("Details","Usuario", new { Area = "Gerenciamento", id = userInfo[0] }, null)">MEUS DADOS</a></li>
            <li><a href="@Url.Action("PedidosPendentes","Admin", new { Area = "Gerenciamento" }, null)">PEDIDOS PENDENTES</a></li>
            <li><a href="@Url.Action("PedidosConfirmados","Admin", new { Area = "Gerenciamento" }, null)">PEDIDOS CONFIRMADOS</a></li>
        </ul>
    </nav>
    <section class="section_Home">
        @foreach (var user in Model)
        {
            foreach (var item in user.Servicos)
            {
                if (item.Confirmar_Servico == false)
                {
                    <section onclick="Redirect(@item.ID)" class="card">
                        <img src="~/Images/FotoPerfil.png" alt="foto do perfil">
                        <p class="pNome">@user.Nome</p>
                        <p>@item.Local_Corpo</p>
                        <p>@item.Data_servico</p>
                        <p>@user.Numero_Tell</p>
                        <div>
                            <a href="@Url.Action("Agendamento", "Home", new { id = item.ID })">
                                <img src="~/Images/ImagemEditar.png" alt="Imagem editar">
                            </a>
                            <a href="@Url.Action("Delete", "Cliente", new { id = item.ID })">
                                <img src="~/Images/ImagemDeletar.png" alt="Imagem deletar">
                            </a>
                        </div>
                    </section>
                }
            }
        }
        <section class="NovoPedido">
            <a href="@Url.Action("Agendamento", "Home")">
                <img src="~/Images/ImageCreate.png" alt="foto do perfil">
            </a>
        </section>
    </section>
</main>
<script>
    function Redirect(id)
    {
        window.location.href = '@Url.Action("Details", "Usuario")/' + id;
    }
</script>
@section style{
    <link href="~/Styles/Cliente/Pedidos.less" rel="stylesheet" type="text/css" /> }