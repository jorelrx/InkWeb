@model Models.Gerenciamento.MUsuario
@{
    ViewBag.Title = "InkWeb - Nova Conta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <section class="form_head">
            <h2>Criar conta</h2>
        </section>
        <section class="form_body">
            <p>Dados do usuário</p>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div>
                @Html.ValidationMessageFor(model => model.Username, "")
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @placeholder = "Login" } })
            </div>

            <div>
                @Html.ValidationMessageFor(model => model.Senha, "")
                @Html.PasswordFor(model => model.Senha, htmlAttributes: new { @placeholder = "Senha" })
            </div>

            <div>
                <input type="password" id="ConfirmarSenha" placeholder="Confirmar senha" />
            </div>

            <p>Dados pessoais</p>

            <div>
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @placeholder = "Nome" } })
            </div>

            <div>
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @placeholder = "E-mail" } })
            </div>

            <div>
                @Html.ValidationMessageFor(model => model.Numero_Tell, "", new { @class = "text-danger" })
                @Html.EditorFor(model => model.Numero_Tell, new { htmlAttributes = new { @placeholder = "Whatsapp/Telefone" } })
            </div>

            <div>
                @Html.ValidationMessageFor(model => model.Instagram, "", new { @class = "text-danger" })
                @Html.EditorFor(model => model.Instagram, new { htmlAttributes = new { @placeholder = "Instagram (Opcional)" } })
            </div>

            <div>
                @Html.ValidationMessageFor(model => model.Data_Nascimento, "", new { @class = "text-danger" })
                @Html.EditorFor(model => model.Data_Nascimento, new { htmlAttributes = new { @placeholder = "Data de nascimento" } })
            </div>

            <div class="genero">
                <p>Gênero</p>
                @Html.ValidationMessageFor(model => model.Sexo, "", new { @class = "text-danger" })
                <div>
                    @{
                        string[] s = new[] { "Masculino", "Feminino", "Outro" };
                    }
                    @foreach (var item in s)
                    {
                        <div>
                            @Html.RadioButtonFor(model => model.Sexo, item)
                            <label for="@item">@item</label>
                        </div>
                    }
                </div>
            </div>
        </section>
        <section class="form_foot">
            <input type="submit" value="Criar conta" class="button" />
        </section>
    }

</main>

@section style{
    <link href="~/Styles/Account/NewAccount.less" rel="stylesheet" type="text/css" /> }