@using Application.DTOs
@model TattooDTO


<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="SizeTattoo" class="control-label"></label>
        <input asp-for="SizeTattoo" class="form-control" />
        <span asp-validation-for="SizeTattoo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BodyLocation" class="control-label"></label>
        <input asp-for="BodyLocation" class="form-control" />
        <span asp-validation-for="BodyLocation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
</form>
